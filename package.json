{
    "name": "language-kuka-krl",
    "displayName": "KUKA KRL",
    "description": "KUKA KRL (KUKA Robot Language) support in Visual Studio Code",
    "version": "1.4.2",
    "publisher": "d4nuu8",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/d4nuu8/language-kuka-krl/issues",
        "email": "d4nuu8@gmail.com"
    },
    "homepage": "https://github.com/d4nuu8/language-kuka-krl",
    "repository": {
        "type": "git",
        "url": "https://github.com/d4nuu8/language-kuka-krl.git"
    },
    "engines": {
        "vscode": "^1.5.0"
    },
    "activationEvents": [
        "onLanguage:krl"
    ],
    "main": "./out/extension",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "krl",
                "aliases": [
                    "KRL",
                    "krl"
                ],
                "extensions": [
                    ".src",
                    ".dat",
                    ".sub"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "krl",
                "scopeName": "source.krl",
                "path": "./syntaxes/krl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "krl",
                "path": "./snippets/krl.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
