{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.krl",
	"name": "KRL",

	"patterns": [
		{ "include": "#ascii" },
		{ "include": "#comment"	},
		{ "include": "#string" }
	],

	"repository": {
		"ascii": {
			"patterns": [{
				"name": "invalid.illegal.krl",
				"match": "[^\\x00-\\x7F]"
			}]
		},

		"comment": {
			"patterns": [{
				"name": "comment.line.character.krl",
				"match": ";.*$"
			},
			{
				"name": "comment.line.character.krl",
				"match": "&.*$"
			}
			]
		},

		"string": {
			"patterns": [{
				"name": "string.quoted.double.krl",
				"begin": "\"",
				"end": "\""
			}]
		}
	}
}